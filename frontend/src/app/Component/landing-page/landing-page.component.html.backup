<section
    class="h-[32rem] bg-main-color bg-[url('assets/hero-img.png')] bg-center  bg-no-repeat bg-cover flex justify-center">
    <div class="flex flex-col items-center w-full max-w-[1400px]">
        <h1 id="heroTitle" class="text-2xl mx-4 md:text-[2rem] text-white font-bold mt-16 mb-4 text-center">{{ heroTitle || ('landing.heroTitle' | translate) }}</h1>

        <!-- travel search section starts here -->
        <div class="travel-search-section w-[90%] sm:w-[80%] max-w-4xl mt-20 bg-white cursor-pointer relative bottom-7 sm:bottom-0 flex flex-row rounded-lg overflow-hidden shadow-lg border border-gray-200">
            <!-- From Section -->
            <div class="flex-1 border-r border-gray-200">
                <div class="px-6 py-4 flex items-center gap-3 h-14">
                    <i class="fa-solid fa-bus text-gray-400 text-lg"></i>
                    <div class="flex-1">
                        <div class="text-xs text-gray-500 font-medium mb-1">{{ 'search.from' | translate }}</div>
                        <input class="outline-none w-full text-gray-800 text-sm font-medium bg-transparent cursor-pointer" 
                               type="text" 
                               placeholder=""
                               [matMenuTriggerFor]="menu" 
                               [(ngModel)]="fromoption"
                               readonly>
                        <mat-menu #menu="matMenu">
                            <button mat-menu-item (click)="fromEvent('Delhi')">Delhi</button>
                            <button mat-menu-item (click)="fromEvent('Mumbai')">Mumbai</button>
                            <button mat-menu-item (click)="fromEvent('Bangalore')">Bangalore</button>
                            <button mat-menu-item (click)="fromEvent('Kolkata')">Kolkata</button>
                            <button mat-menu-item (click)="fromEvent('Chennai')">Chennai</button>
                        </mat-menu>
                    </div>
                </div>
            </div>

            <!-- To Section -->
            <div class="flex-1 border-r border-gray-200">
                <div class="px-6 py-4 flex items-center gap-3 h-14">
                    <div class="flex items-center gap-1">
                        <i class="fa-solid fa-location-dot text-gray-400 text-sm"></i>
                        <i class="fa-solid fa-person-walking text-gray-400 text-sm"></i>
                    </div>
                    <div class="flex-1">
                        <div class="text-xs text-gray-500 font-medium mb-1">{{ 'search.to' | translate }}</div>
                        <input class="outline-none w-full text-gray-800 text-sm font-medium bg-transparent cursor-pointer" 
                               type="text" 
                               placeholder=""
                               [matMenuTriggerFor]="menu2" 
                               [(ngModel)]="tooption"
                               readonly>
                        <mat-menu #menu2="matMenu">
                            <button mat-menu-item (click)="toEvent('Jaipur')">Jaipur</button>
                            <button mat-menu-item (click)="toEvent('Goa')">Goa</button>
                            <button mat-menu-item (click)="toEvent('Mysore')">Mysore</button>
                            <button mat-menu-item (click)="toEvent('Darjeeling')">Darjeeling</button>
                            <button mat-menu-item (click)="toEvent('Pondicherry')">Pondicherry</button>
                        </mat-menu>
                    </div>
                </div>
            </div>

            <!-- Date Section -->
            <div class="flex-1 border-r border-gray-200">
                <div class="px-6 py-4 flex items-center gap-3 h-14">
                    <i class="fa-solid fa-calendar-days text-gray-400 text-lg"></i>
                    <div class="flex-1">
                        <div class="text-xs text-gray-500 font-medium mb-1">{{ 'search.departure' | translate }}</div>
                        <input matInput 
                               class="outline-none w-full text-gray-800 text-sm font-medium bg-transparent cursor-pointer" 
                               placeholder=""
                               [matDatepicker]="picker" 
                               (click)="picker.open()"
                               (dateChange)="matchDate($event)"
                               readonly>
                        <mat-datepicker #picker></mat-datepicker>
                    </div>
                </div>
            </div>

            <!-- Search Button -->
            <div class="flex-shrink-0">
                <button class="h-14 px-8 bg-red-500 hover:bg-red-600 text-white font-bold text-sm uppercase tracking-wide transition-colors duration-200"
                        (click)="submit()">
                    {{ 'search.searchBuses' | translate }}
                </button>
            </div>
        </div>
        <!-- travel search section ends here -->
        
        <!-- Add spacing between search and offers -->
        <div style="height: 60px;"></div>
    </div>
</section>
<!-- -------------------------- hero section ends here ---------------------------  -->





